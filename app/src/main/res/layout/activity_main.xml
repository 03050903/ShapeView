<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.github.xwc.example.MainActivity">


        <com.github.xwc.view.ShapeView
            android:id="@+id/heartShapeView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_type="heart">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image4" />

        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/heartShapeView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            app:layout_constraintLeft_toRightOf="@id/heartShapeView"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_borderWidth="3dp"
            app:shape_type="heart">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image4" />

        </com.github.xwc.view.ShapeView>

        <com.github.xwc.view.ShapeView
            android:id="@+id/heartShapeView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/heartShapeView2"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_borderDashGap="3dp"
            app:shape_borderDashWidth="10dp"
            app:shape_borderWidth="3dp"
            app:shape_type="heart">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image4" />

        </com.github.xwc.view.ShapeView>

        <com.github.xwc.view.ShapeView
            android:id="@+id/circleShapeView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heartShapeView">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="circle"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/circleShapeView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            app:layout_constraintLeft_toRightOf="@id/circleShapeView"
            app:layout_constraintTop_toBottomOf="@id/heartShapeView"
            app:shape_borderColor="@android:color/holo_red_dark"
            app:shape_borderWidth="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image1" />


        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/circleShapeView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            app:layout_constraintLeft_toRightOf="@id/circleShapeView2"
            app:layout_constraintTop_toBottomOf="@id/heartShapeView"
            app:shape_borderColor="@color/colorAccent"
            app:shape_borderDashGap="3dp"
            app:shape_borderDashWidth="10dp"
            app:shape_borderWidth="3dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image1" />


        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/roundRectShapeView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/circleShapeView"
            app:shape_borderWidth="3dp"
            app:shape_roundRect_radius="20dp"
            app:shape_type="roundRect">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="roundRect"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.github.xwc.view.ShapeView>

        <com.github.xwc.view.ShapeView
            android:id="@+id/roundRectShapeView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/roundRectShapeView"
            app:layout_constraintTop_toBottomOf="@id/circleShapeView"
            app:shape_roundRect_bottomRightRadius="20dp"
            app:shape_roundRect_topLeftRadius="20dp"
            app:shape_type="roundRect">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image2" />

        </com.github.xwc.view.ShapeView>

        <com.github.xwc.view.ShapeView
            android:id="@+id/roundRectShapeView3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@id/roundRectShapeView2"
            app:layout_constraintLeft_toRightOf="@id/roundRectShapeView2"
            app:layout_constraintTop_toTopOf="@id/roundRectShapeView2"
            app:shape_borderDashGap="10dp"
            app:shape_borderDashWidth="10dp"
            app:shape_borderWidth="3dp"
            app:shape_roundRect_radius="20dp"
            app:shape_type="roundRect">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image2" />

        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/triangleShapeView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roundRectShapeView"
            app:shape_type="triangle">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image3" />

        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/triangleShapeView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/triangleShapeView"
            app:layout_constraintTop_toBottomOf="@id/roundRectShapeView"
            app:shape_triangle_percentBottom="1"
            app:shape_triangle_percentLeft="0.5"
            app:shape_triangle_percentRight="0"
            app:shape_type="triangle">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image3" />


        </com.github.xwc.view.ShapeView>

        <com.github.xwc.view.ShapeView
            android:id="@+id/triangleShapeView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/triangleShapeView2"
            app:layout_constraintTop_toBottomOf="@id/roundRectShapeView"
            app:shape_triangle_percentBottom="0"
            app:shape_triangle_percentLeft="0"
            app:shape_triangle_percentRight="0"
            app:shape_type="triangle">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/image3" />
        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/polygonShapeView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/triangleShapeView"
            app:shape_type="polygon">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/image7" />

        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/polygonShapeView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            app:layout_constraintLeft_toRightOf="@id/polygonShapeView"
            app:layout_constraintTop_toBottomOf="@id/triangleShapeView"
            app:shape_borderWidth="3dp"
            app:shape_polygon_side="6"
            app:shape_type="polygon">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/image7" />

        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/polygonShapeView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            app:layout_constraintLeft_toRightOf="@id/polygonShapeView2"
            app:layout_constraintTop_toBottomOf="@id/triangleShapeView"
            app:shape_borderWidth="3dp"
            app:shape_polygon_side="6"
            app:shape_polygon_turn="0.5"
            app:shape_type="polygon">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/image7" />

        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/starShapeView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/polygonShapeView"
            app:shape_type="star">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/image6" />

        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/starShapeView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="3dp"
            app:layout_constraintLeft_toRightOf="@id/starShapeView"
            app:layout_constraintTop_toBottomOf="@id/polygonShapeView"
            app:shape_borderWidth="3dp"
            app:shape_star_turn="0.5"
            app:shape_type="star">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/image6" />

        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/diagonalShapeView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/starShapeView"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="right"
            app:shape_diagonal_position="bottom"
            app:shape_type="diagonal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/image5" />

        </com.github.xwc.view.ShapeView>

        <com.github.xwc.view.ShapeView
            android:id="@+id/diagonalShapeView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/diagonalShapeView"
            app:layout_constraintTop_toBottomOf="@id/starShapeView"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="left"
            app:shape_diagonal_position="bottom"
            app:shape_type="diagonal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/image5" />

        </com.github.xwc.view.ShapeView>


        <com.github.xwc.view.ShapeView
            android:id="@+id/diagonalShapeView3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/diagonalShapeView2"
            app:layout_constraintTop_toBottomOf="@id/starShapeView"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="left"
            app:shape_diagonal_position="top"
            app:shape_type="diagonal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/image5" />

        </com.github.xwc.view.ShapeView>

        <com.github.xwc.view.ShapeView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/diagonalShapeView"
            app:shape_borderWidth="3dp"
            app:shape_roundRect_pressed_color="#303F9F"
            app:shape_roundRect_default_color="#3F51B5"
            app:shape_roundRect_bottomRightRadius="20dp"
            app:shape_roundRect_topLeftRadius="20dp"
            app:shape_type="roundRect">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="按钮"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.github.xwc.view.ShapeView>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>